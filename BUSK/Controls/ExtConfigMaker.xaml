<Window x:Class="BUSK.Controls.ExtConfigMaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUSK.Controls"
        mc:Ignorable="d"
        Title="ExtConfigMaker" Height="450" Width="800">
    <Grid DragOver="Grid_DragOver" Drop="Grid_Drop" AllowDrop="True" Background="White">
        <TextBlock Text="Drop the extension (*.dll) file over here to create a extension config file in the same directory" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
